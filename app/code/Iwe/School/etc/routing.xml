<?xml version="1.0" encoding="UTF-8"?>
<config>
    <admin>
        <routing>
            <routes>
                <school translate="name">
                    <controller>iwe_school/admin_crud</controller>
                    <use>iwe_school/school</use>
                    <name>School</name>
                </school>
                <content translate="name">
                    <name>Content</name>
                    <routes>
                        <region translate="name">
                            <controller>core/crud</controller>
                            <use>iwe_school/region</use>
                            <name>Regions</name>
                        </region>
                    </routes>
                </content>
            </routes>
        </routing>
    </admin>
    <frontend>
        <routing>
            <routes>
                <school>
                    <name>School</name>
                    <controller>iwe_school/map</controller>
                    <use>iwe_school/school</use>
                </school>
                <image>
                    <access>ALLOW</access>
                    <hidden>1</hidden>
                    <routes>
                        <__id__>
                            <controller>iwe_school/image</controller>
                        </__id__>
                    </routes>
                </image>
            </routes>
        </routing>
    </frontend>
</config>