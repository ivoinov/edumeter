<?xml version="1.0" encoding="UTF-8"?>
<config>
	<global>
		<entity>
			<iwe_school>
				<entity>
					<table>iwe_school_entity</table>
					<key>id</key>
					<attributes>
						<id translate="label">
							<label>ID</label>
							<type>number</type>
						</id>
						<name translate="label,description">
							<label>Name</label>
							<maxlength>255</maxlength>
                            <required>1</required>
                            <description>School name</description>
						</name>
						<region_id translate="label">
							<label>Region</label>
                            <description>School's region</description>
                            <type>select</type>
                            <options>iwe_region/entity</options>
                            <data_type>int</data_type>
                        </region_id>
                        <city>
                            <label>City</label>
                            <maxlength>255</maxlength>
                        </city>
                        <address>
                            <label>School address</label>
                            <maxlength>255</maxlength>
                            <required>1</required>
                            <description>School address</description>
                        </address>
                        <description>
                            <label>Description</label>
                            <type>textarea</type>
                            <wysiwyg>1</wysiwyg>
                            <nullable>1</nullable>
                            <data_type>text</data_type>
                        </description>
                        <longitude>
                            <label>Longitude</label>
                            <data_type>float</data_type>
                            <nullable>1</nullable>
                            <description>School longitude</description>
                        </longitude>
                        <latitude>
                            <label>Latitude</label>
                            <description>School latitude</description>
                            <data_type>float</data_type>
                            <nullable>1</nullable>
                        </latitude>
					</attributes>
				</entity>
			</iwe_school>
		</entity>
	</global>
	<admin>
		<forms>
			<iwe_school>
				<entity translate="title,fieldset,tab">
					<title>Edit from</title>
                    <tabs>
                        <general translate="label">
                            <label>General</label>
                        </general>
                        <coords translate="label">
                            <label>Coordinate</label>
                        </coords>
                    </tabs>
                    <fieldsets>
                        <general>
                            <label>General information</label>
                        </general>
                        <coords>
                            <label>Ð¡oordinates</label>
                        </coords>
                    </fieldsets>
					<source>iwe_school/entity</source>
					<fields>
						<name>
                            <tab>general</tab>
                            <fieldset>general</fieldset>
                        </name>
						<region_id>
                            <tab>general</tab>
                            <fieldset>general</fieldset>
                        </region_id>
                        <city>
                            <tab>general</tab>
                            <fieldset>general</fieldset>
                        </city>
                        <address>
                            <tab>general</tab>
                            <fieldset>general</fieldset>
                        </address>
                        <description>
                            <tab>general</tab>
                            <fieldset>general</fieldset>
                        </description>
                        <longitude>
                            <fieldset>coords</fieldset>
                            <tab>coords</tab>
                        </longitude>
                        <latitude>
                            <fieldset>coords</fieldset>
                            <tab>coords</tab>
                        </latitude>
					</fields>
				</entity>
			</iwe_school>
		</forms>
		<grids>
			<iwe_school>
				<entity translate="title">
					<title>School list</title>
					<source>iwe_school/entity</source>
                    <collection>iwe_school/entity</collection>
					<use_ajax>1</use_ajax>
					<fields>
						<id>	
							<width>40px</width>
						</id>
						<name />
                        <city/>
                        <region_id/>
					</fields>
				</entity>
			</iwe_school>
		</grids>
	</admin>
    <frontend>
        <grids>
            <iwe_school>
                <entity translate="title">
                    <source>iwe_school/entity</source>
                    <add_default_actions>0</add_default_actions>
                    <use_ajax>1</use_ajax>
                    <fields>
                        <id>
                            <width>40px</width>
                        </id>
                        <name />
                        <address/>
                        <description/>
                    </fields>
                </entity>
            </iwe_school>
        </grids>
    </frontend>
</config>